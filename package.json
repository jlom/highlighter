{
  "name": "highlighter",
  "version": "1.0.0",
  "description": "Website for Highlighter Lom",
  "repository": {
    "type": "git",
    "url": "https://github.com/jlom/highlighter.git"
  },
  "bugs": {
    "url": "https://github.com/jlom/highlighter/issues"
  },
  "homepage": "https://github.com/jlom/highlighter",
  "main": "index.js",
  "watch": {
    "build-babel": "src/js/{*,**}",
    "build-css": {
      "patterns": [
        "src/style/{*,**}"
      ],
      "extensions": "sass"
    },
    "build-html": {
      "patterns": [
        "src"
      ],
      "extensions": "ejs"
    },
    "build-img": {
      "patterns": [
        "src/img"
      ],
      "extensions": "jpg,jpeg,png,gif,ico"
    },
    "build-svg": {
      "patterns": [
        "src/img"
      ],
      "extensions": "svg"
    }
  },
  "scripts": {
    "build-sass": "node-sass src/style/main.sass web/style/main.css --source-map web/style/main.css.map",
    "build-postcss": "postcss --use autoprefixer --autoprefixer.browsers '> 5%' --use cssnano -o web/style/main.css web/style/main.css --map web/style/main.css.map",
    "build-css": "npm run build-sass; npm run build-postcss",
    "build-babel": "babel src -d web --source-maps",
    "build-html": "ejs-cli --base-dir src/ '*.ejs' --out web/",
    "build-img": "imagemin src/img/* --out-dir=web/img",
    "build-svg": "svgo src/img -o web/img",
    "build-txt": "find src/ \\( -name '*.txt' \\) -exec cp {} web/ \\;",
    "build": "npm run clean; npm run build-babel & npm run build-html & npm run build-img & npm run build-svg & npm run build-txt && npm run build-sass && npm run build-postcss",
    "serve": "live-server web --watch --wait --browser='Google Chrome Canary'",
    "clean": "rm -rf web; mkdir -p web/img",
    "watch": "npm-watch",
    "start": "npm run build; npm run serve & npm run watch",
    "postinstall": "npm i -g imagemin-cli ejs-cli svgo postcss npm-watch babel cssnano"
  },
  "os" : [ "darwin", "linux" ],
  "author": "Jørgen Arnor Gårdsø Lom",
  "license": "CC-BY-4.0",
  "devDependencies": {
    "autoprefixer": "^6.5.4",
    "babel-cli": "^6.18.0",
    "babel-preset-latest": "^6.16.0",
    "babili": "0.0.9",
    "cssnano": "^3.9.1",
    "ejs-cli": "^2.0.0",
    "lite-server": "^2.2.2",
    "node-sass": "^3.13.0",
    "npm-watch": "^0.1.6",
    "postcss-cli": "^2.6.0",
    "svgo": "^0.7.1"
  },
  "dependencies": {
    "fontfaceobserver": "^2.0.7"
  }
}
